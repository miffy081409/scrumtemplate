<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Developer API - @ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body data-ng-app="searchApp" data-ng-controller="searchViewModel">
    <div class="body-wrapper">
        <header class="col-md-12 default-header">
            <!--<p>&lt; Scrum Template &gt; Developer API &lt; Scrum Template &#47&gt;</p>-->
            <p>
                <a href="/">&lt; Developer API &#47&gt;</a>
            </p>
            
            <h6>Design and Developed by Scrum Master Kunu</h6>
            <div class="col-md-6 col-md-offset-3 col-sm-12">
                <input class="form-control" data-ng-model="searchKeyword" data-ng-change="keywordChanged()" placeholder="Looking for API documentation? Type keyword to start searching e.g. 'Register'" />
            </div>
            <!--<a href="https://github.com/miffy081409/scrumtemplate" style="top:0;right:0;position:absolute;">
            <img src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" />
        </a>-->
        </header>
        <div class="col-md-8 col-md-offset-2 main-content">
            @RenderBody()
        </div>
        <span class="clearfix"></span>
        <hr />
        <footer>
            <p>&copy; 2015 - Developer API | Scrum Template</p>
            <div class="col-md-12">
                @*note target property help us bypass angular routing and sends back to mvc routing*@
                <a href="~/account" target="_self">Sign in your account</a> | <a href="~/account" target="_self">Create your account</a> | <a href="~/api/register" target="_self">Register Your API</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/lib/angular-route/angular-route.min.js"></script>
    <script src="~/apps/Search/searchApp.js"></script>
    <script src="~/apps/Search/Models/api.js"></script>
    <script src="~/apps/Search/ViewModels/searchViewModel.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
